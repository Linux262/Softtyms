@import "../../helper/html2wxml/html2wxml.wxss";

.title {
  color: #333;
  font-size: 24px;
  margin: 0 30px 20px;
  text-align: center;
  line-height: 1.5;
  display: block;
  padding-top: 50px;
}
.info {
  color: #9b9b9b;
  display: flex;
  line-height: 1;
  justify-content: center;
}
.info image {
  width: 14px;
  height: 14px;
  display: inline-block;
  vertical-align: middle;
  margin-top: -3px;
}
.time {
  margin-right: 30px;
  font-size: 13px;
}
.tip {
  font-size: 13px;
}
.content {
  margin: 50px 20px 0;
  padding-bottom: 50px;
}
scroll-view {
  height: 100vh;
  position: relative;
}
.post {
  position: relative;
}
.button {
  position: absolute;
  bottom: 30px;
  right: 30px;
  width: 42px;
  height: 42px;
  padding: 1px;
  box-sizing: border-box;
  border-radius: 50%;
  background: rgba(0, 0, 0, .3);
}
.button.ready {
  background: rgba(0, 0, 0, .6);
}
.button.ready image {
  opacity: 1;
}
.button image {
  width: 40px;
  height: 40px;
  display: block;
  opacity: .7;
}
.rate {
  transition: all .1s linear;
  height: 100vh;
  position: absolute;
  border-right: 1px solid #efefef;
}
