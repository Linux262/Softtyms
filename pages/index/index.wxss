.index {
  height: 100vh;
  background-size: cover;
  background-position: center;
  visibility: hidden;
  position: relative;
}
.index::before {
  content: '';
  background: rgba(0, 0, 0, .3);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.index.active {
  visibility: visible;
}
.links {
  height: 100.1%;
  box-sizing: border-box;
  position: relative;
  padding: 100px 0 70px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.logo {
  width: 100px;
  display: block;
  margin: 0 auto;
}
navigator {
  box-sizing: border-box;
  width: 64%;
  margin: 15px auto 0;
  background: #e22d47;
  padding: 16px 20px;
  color: #fff;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}
navigator:nth-child(2) {
  background: #466bb0;
}
navigator:nth-child(3) {
  background: #3dddc0;
}
