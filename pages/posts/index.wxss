scroll-view {
  height: 100vh;
}
.post {
  margin: 10px 10px 30px;
  border-bottom: 1px solid #eaebee;
}
.cover {
  position: relative;
  overflow: hidden;
  border-radius: 3px;
}
.cover::before,
.cover::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .27);
}
.cover::after {
  width: auto;
  height: auto;
  top: 15px;
  left: 15px;
  bottom: 15px;
  right: 15px;
  border: 1px solid rgba(255, 255, 255, .8);
  box-sizing: border-box;
  background: transparent;
}
image {
  display: block;
  width: 100%;
}
.title {
  position: absolute;
  color: rgba(255, 255, 255, .9);
  font-size: 16px;
  left: 30px;
  line-height: 1.4;
  bottom: 30px;
  right: 30px;
}
rich-text {
  color: #858484;
  font-size: 14px;
  padding: 20px;
  line-height: 1.5;
}
