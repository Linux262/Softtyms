scroll-view {
  height: 100vh;
  background: #eee;
}
.post {
  background: #fff;
  margin-bottom: 10px;
}
.cover {
  position: relative;
  overflow: hidden;
}
.cover::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .2);
}
image {
  display: block;
  width: 100%;
}
.title {
  position: absolute;
  color: rgba(255, 255, 255, .9);
  font-size: 18px;
  line-height: 1.4;
  box-sizing: border-box;
  padding: 0 30px;
  bottom: 20px;
}
.excerpt {
  color: #999;
  font-size: 14px;
  padding: 20px 30px 30px;
  line-height: 1.6;
}
